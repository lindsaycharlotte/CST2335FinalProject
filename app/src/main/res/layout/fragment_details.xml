<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsFragment"
    android:id="@+id/fragmentLocation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Article Name: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/category"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_fill"
            android:text="Article Category: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/url"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/category_fill"
            android:text="Article URL: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name_fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:text="@string/fill_me" />

        <TextView
            android:id="@+id/category_fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/category"
            android:text="@string/fill_me" />

        <TextView
            android:id="@+id/url_fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/url"
            android:text="@string/fill_me"
            android:autoLink="web"/>

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/url_fill"
            android:text="Save to Favourites" />


    </RelativeLayout>
</FrameLayout>